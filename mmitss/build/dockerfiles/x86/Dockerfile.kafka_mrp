#-----------------------------------------------------------------------------#
#    Dockerfile to build an x86 platform image for a field intersection       #
#    Image name: mmitssuarizona/mmitss-mrp-x86                                #
#-----------------------------------------------------------------------------#
FROM mmitssuarizona/mmitss-x86-base:3.0
MAINTAINER D Cunningham (donaldcunningham@email.arizona.edu)

SHELL ["/bin/bash", "-c"]

WORKDIR /mmitss
COPY mmitss/src/common/MsgTransceiver/CarmaKafkaTransceiver /mmitss/CarmaKafkaTransceiver

WORKDIR /mmitss/script
COPY mmitss/build/dockerfiles/x86/scripts/install_env_mrp.sh /mmitss/script
COPY mmitss/build/dockerfiles/x86/scripts/runKafkaTransceiver.sh /mmitss/script

RUN chmod 777 install_env_mrp.sh
RUN ./install_env_mrp.sh

WORKDIR /mmitss/tmp
COPY mmitss /mmitss/repo
