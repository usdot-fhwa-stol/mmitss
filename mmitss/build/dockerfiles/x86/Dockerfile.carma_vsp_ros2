#-----------------------------------------------------------------------------#
#    Dockerfile to build an arm platform image for the carma vsp              #
#    Image name: mmitssuarizona/mmitss-carma-vsp-x86                          #
#-----------------------------------------------------------------------------#
FROM mmitssuarizona/mmitss-x86-base:3.0
MAINTAINER S Cornejo (donaldcunningham@email.arizona.edu)

ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8

RUN apt update && apt install -y curl gnupg2 lsb-release
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key  -o /usr/share/keyrings/ros-archive-keyring.gpg

RUN echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(lsb_release -cs) main" | tee /etc/apt/sources.list.d/ros2.list > /dev/null

RUN apt update
RUN DEBIAN_FRONTEND=noninteractive apt install -y ros-foxy-desktop
RUN apt-get -y update
RUN apt-get -y install git

WORKDIR /root/dev_ws/src
RUN git clone https://github.com/ros/ros_tutorials.git -b foxy-devel
WORKDIR /root/dev_ws


RUN apt-get install python3-rosdep -y
RUN rosdep init
RUN rosdep update
RUN rosdep install --from-paths src --ignore-src -r -y --rosdistro foxy

RUN apt install python3-colcon-common-extensions -y
 
COPY build/dockerfiles/x86/ros2_entrypoint.sh /mmitss
RUN sudo chmod 755 /mmitss/ros2_entrypoint.sh

COPY build/dockerfiles/x86/vspros2_startup.sh /mmitss

WORKDIR /root/dev_ws/src
RUN git clone https://github.com/usdot-fhwa-stol/carma-msgs.git
WORKDIR /root/dev_ws/src/carma-msgs

SHELL ["/bin/bash", "-c"]
#RUN chmod +x /opt/ros/foxy/setup.bash
RUN source /opt/ros/foxy/setup.bash && colcon build --packages-up-to carma_driver_msgs



COPY build/bin/CarmaDecoderRos2/x86/M_CarmaMsgDecoder /mmitss
COPY build/bin/CarmaEncoderRos2/x86/M_CarmaMsgEncoder /mmitss
COPY build/bin/PriorityRequestGenerator/x86/M_PriorityRequestGenerator /mmitss
COPY build/bin/LightSirenStatusManager/x86/M_LightSirenStatusManager /mmitss
COPY build/bin/LightSirenStatusManager/images /mmitss
COPY build/bin/SystemInterface/x86/M_SystemInterface /mmitss
COPY build/bin/V2XDataCollector/x86/M_V2XDataCollector /mmitss
COPY build/bin/DataCompressor/x86/M_DataCompressor /mmitss

ENTRYPOINT ["/usr/bin/supervisord", "--configuration=/nojournal/bin/supervisord.conf"]
